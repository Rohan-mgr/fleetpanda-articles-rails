<div class='w-50 mx-auto'>
    <div class="">
    <%= form_with model: article do |f| %>
        <div class="mb-3">
            <%= f.label :status, class: "form-label"%>
            <%= f.select :status, Visible::VALID_STATUSES, {selected: article.status || "public"}, {class: "form-select"} %>
        </div>

        <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
            <%= article.errors.full_messages_for(:title)[0] %>
        </div>

        <div class="mb-3">
            <%= f.label "Description", class: "form-label" %>
            <%= f.text_area :body, class: "form-control", style: "height: 50vh" %>
            <%= article.errors.full_messages_for(:body)[0] %>
        </div>

        <div class="d-flex justify-content-end">
           <button type="submit" class="btn btn-success">+ Add New Article</button>
        </div>
    <% end %>
</div>
